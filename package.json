{
  "version": "1.0.0",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "nodemon src/server.js",
    "format": "prettier --write . --ignore-path .gitignore",
    "lint": "eslint . --ignore-path .gitignore",
    "test": "npm run format && npm run lint -- --fix",
    "prepare": "husky install"
  },
  "devDependencies": {
    "eslint": "^8.50.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.3.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8"
  },
  "lint-staged": {
    "*.js": "npm run test"
  },
  "dependencies": {
    "express": "^4.18.2"
  }
}
